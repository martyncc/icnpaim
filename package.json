{
  "name": "icn-paim-simple",
  "version": "1.0.0",
  "description": "ICN PAIM - Plataforma simple con Express y React",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "npm install && cd client && npm install && npm run build",
    "start": "node server/index.js",
    "railway:build": "npm install && cd client && npm install && npm run build",
    "railway:start": "node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "express-session": "^1.17.3",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "node-jose": "^2.2.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
